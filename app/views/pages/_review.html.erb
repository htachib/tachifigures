<div class="flex flex-wrap items-center justify-center lg:justify-between mx-auto max-w-5xl border-b border-yellow-300 md:pb-8 pb-4 md:mb-8 mb-6">
  <div class="px-4 lg:mb-0 w-full lg:w-1/3 mb-4">
    <div class="flex items-center justify-center">
      <%= image_tag "connect/#{review[:avatar]}", class: "w-20 md:w-24 h-20 md:h-24 mr-6 rounded-full" %>
      <div>
        <h3 class="mb-2 text-xl md:text-2xl font-semibold"><%= review[:name] %></h3>
        <span class="text-lg text-coolGray-500 font-medium"><%= review[:title] %></span>
      </div>
    </div>
  </div>
  <div class="px-4 w-full lg:w-2/3">
    <div class="relative pb-6 sm:p-6 pt-6">
      <%= image_tag "connect/quotes-top.svg", class: "absolute top-0 h-12 left-0 opacity-30" %>
      <%= image_tag "connect/quotes-bottom.svg", class: "absolute bottom-0 right-0 h-12 opacity-30" %>
      <div class="relative">
        <p class="font-semibold tracking-tighter text-sm lg:text-xl md:text-lg lg:px-8 px-6">
          <%= review[:text] %>
        </p>
      </div>
    </div>
  </div>
</div>
