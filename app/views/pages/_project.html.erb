<div class="relative group">
  <div class="aspect-w-4 aspect-h-3 rounded-lg overflow-hidden bg-gray-100">
    <img src="<%= image_url "portfolio/#{project.logo_file_name}" %>" alt="Payment application dashboard screenshot with transaction table, financial highlights, and main clients on colorful purple background." class="object-center object-cover">
    <% if project.acquired? %>
      <div class="flex items-end opacity-0 p-4 opacity-100" aria-hidden="true">
        <div class="text-left bg-brand bg-opacity-75 backdrop-filter backdrop-blur py-2 px-4 rounded-md text-sm font-medium text-black text-center absolute right-2 bottom-2">
          <%= link_to 'Acquired', project.acquisition_url || project.url, class: 'font-brand-button' %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="mt-4 flex items-center justify-between text-base font-medium text-gray-900 space-x-8">
    <h3>
      <a href="<%= project.url %>" target="_blank">
        <span aria-hidden="true" class=""></span>
        <%= project.name %>
      </a>
    </h3>
    <p>
      <%= link_to project.url, target: :_blank do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      <% end %>
    </p>
  </div>
  <p class="mt-1 text-sm text-gray-500"><%= project.description %></p>
</div>
